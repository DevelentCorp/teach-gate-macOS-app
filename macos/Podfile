# --- Additional monkeypatch for Xcodeproj object version 70 incompatibility ---
begin
  require 'xcodeproj'
  # Force LAST_KNOWN_OBJECT_VERSION to 60 so CocoaPods/xcodeproj don't attempt to use 70
  if defined?(Xcodeproj::Constants::LAST_KNOWN_OBJECT_VERSION)
    Xcodeproj::Constants.send(:remove_const, :LAST_KNOWN_OBJECT_VERSION) rescue nil
    Xcodeproj::Constants.const_set(:LAST_KNOWN_OBJECT_VERSION, 60)
  end
  if defined?(Xcodeproj::Project::LAST_KNOWN_OBJECT_VERSION)
    Xcodeproj::Project.send(:remove_const, :LAST_KNOWN_OBJECT_VERSION) rescue nil
    Xcodeproj::Project.const_set(:LAST_KNOWN_OBJECT_VERSION, 60)
  end
  # Ensure mapping exists for 70 to avoid ArgumentError when encountered
  if defined?(Xcodeproj::Constants::COMPATIBILITY_VERSION_NAMES_BY_OBJECT_VERSION)
    Xcodeproj::Constants::COMPATIBILITY_VERSION_NAMES_BY_OBJECT_VERSION[70] ||= 'Xcode 16.0'
  end
rescue => e
  puts "Podfile workaround 2: failed to force LAST_KNOWN_OBJECT_VERSION: #{e}"
end
# -------------------------------------------------------------------------------
# --- Workaround for CocoaPods/xcodeproj incompatibility with objectVersion '70' on Ruby 2.6 ---
# Force Pods project object version to a stable value supported by current xcodeproj, and add missing mapping.
begin
  require 'cocoapods'
  require 'xcodeproj'

  # Prefer generating Pods project with an older, widely supported object version
  if defined?(Xcodeproj::Constants::DEFAULT_OBJECT_VERSION)
    Xcodeproj::Constants.send(:remove_const, :DEFAULT_OBJECT_VERSION) rescue nil
  end
  Xcodeproj::Constants.const_set(:DEFAULT_OBJECT_VERSION, 60)

  # Ensure xcodeproj knows how to map objectVersion '70' to a compatibility string (Xcode 16)
  if defined?(Xcodeproj::Constants::COMPATIBILITY_VERSION_NAMES_BY_OBJECT_VERSION)
    Xcodeproj::Constants::COMPATIBILITY_VERSION_NAMES_BY_OBJECT_VERSION[70] ||= 'Xcode 16.0'
  end

  # Also change project-level defaults (some Cocoapods versions read from here)
  if defined?(Xcodeproj::Project::DEFAULT_OBJECT_VERSION)
    Xcodeproj::Project.send(:remove_const, :DEFAULT_OBJECT_VERSION) rescue nil
    Xcodeproj::Project.const_set(:DEFAULT_OBJECT_VERSION, 60)
  end
  if defined?(Pod::Project::DEFAULT_OBJECT_VERSION)
    Pod::Project.send(:remove_const, :DEFAULT_OBJECT_VERSION) rescue nil
    Pod::Project.const_set(:DEFAULT_OBJECT_VERSION, '60')
  end
rescue => e
  puts "Podfile workaround: failed to set DEFAULT_OBJECT_VERSION or mapping: #{e}"
end
# -----------------------------------------------------------------------------------------------

require_relative '../node_modules/react-native-macos/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

prepare_react_native_project!

target 'Teach Gate-macOS' do
  platform :macos, '11.0'
  use_native_modules!

  # Flags change depending on the env values.
  flags = get_default_flags()

  use_react_native!(
    :path => '../node_modules/react-native-macos',
    :hermes_enabled => false,
    :fabric_enabled => ENV['RCT_NEW_ARCH_ENABLED'] == '1',
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Structured logging for app (CocoaLumberjack)
  pod 'CocoaLumberjack/Swift'
end


# Combined post_install hook for both targets
post_install do |installer|
  # Ensure Pods project uses a supported object version even if defaults change
  begin
    installer.pods_project.object_version = 60
  rescue => e
    puts "Podfile post_install: failed to set pods_project.object_version: #{e}"
  end

  # React Native post install
  react_native_post_install(installer)

  
  # Network Extension specific configurations
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Ensure consistent deployment target
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '11.0'
      # Enable Network Extension capabilities for TeachGateVPN target
      if target.name == 'TeachGateVPN'
        config.build_settings['CODE_SIGN_ENTITLEMENTS'] = 'TeachGateVPN/TeachGateVPN.entitlements'
        # Optimize for Network Extensions
        config.build_settings['APPLICATION_EXTENSION_API_ONLY'] = 'YES'
      end
    end
  end
end
